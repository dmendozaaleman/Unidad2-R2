<p id="notice"><%= notice %></p>

<h1>Lista de Libros.</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th>Genero</th>
      <th>Número de Hojas</th>
      <th>Peso</th>
      <th>Fecha publicación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td style="color:#000000"><%= pet.name %></td>
        <td style="color:#000000"><%= pet.breed %></td>
        <td style="color:#000000"><%= pet.pet_type %></td>
        <td style="color:#000000"><%= pet.age %></td>
        <td style="color:#000000"><%= pet.weight %></td>
        <td style="color:#000000"><%= pet.last_appointment %></td>
        <td><%= link_to 'Show', pet, :class => 'button radius default' %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet), :class => 'button radius success' %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button radius alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Libro', new_pet_path, :class => 'button radius success' %>
