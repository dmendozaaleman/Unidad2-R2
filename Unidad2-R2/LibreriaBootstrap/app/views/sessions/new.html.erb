<div >
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
 
  <%= form_tag do %>
    <fieldset>
      <legend style="color:white;">FAVOR DE INICIAR SESIÓN</legend>
 
      <div>
        <%= label_tag :name, 'Nombre:', :class=>"label" %>
        <%= text_field_tag :name, params[:name] %>
      </div>
 
      <div>
        <%= label_tag :password, 'Contraseña:', :class=>"label" %>
        <%= password_field_tag :password, params[:password] %>
      </div>
  
      <div>
        <%= submit_tag "Ingresar", :class => 'button radius default' %>
      </div>
    </fieldset>
  <% end %>
</div>