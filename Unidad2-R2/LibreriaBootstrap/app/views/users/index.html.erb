<p id="notice"><%= notice %></p>

<h1>Lista de Usuarios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="color: #000000"><%= user.name %></td>
        <td><%= link_to 'Ver', user, :class => 'button radius default' %></td>
        <td><%= link_to 'Editar', edit_user_path(user), :class => 'button radius success' %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button radius alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path, :class => 'button radius success' %>
