<p id="notice"><%= notice %></p>

<h1>Autos</h1>

<table>
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Año</th>
      <th>Precio</th>
      <th>Fecha de Compra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @autos.each do |auto| %>
      <tr>
        <td><%= auto.marca %></td>
        <td><%= auto.modelo %></td>
        <td><%= auto.anio %></td>
        <td><%= auto.precio %></td>
        <td><%= auto.fecha_adquisicion %></td>
        <td><%= link_to 'Consultar Registro', auto, class:'button radius' %></td>
        <td><%= link_to 'Editar Registro', edit_auto_path(auto), class:'button radius success' %></td>
        <td><%= link_to 'Eliminar Registro', auto, method: :delete, data: { confirm: '¿Esta seguro de eliminar el registro?' }, class:'button radius alert'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Auto', new_auto_path, class:'button' %>
